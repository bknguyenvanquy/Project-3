<% layout('layout2') %>

    <div id="wrapper">

    <% include partials/sidebar %>

        <div id="page-content-wrapper">
            <% include partials/navbar %>
                <div class="container-fluid main_body">
                    <h1>Hello, <%= user.fullname %></h1>
                    <p>What would you like to do today?</p>
                    
                    <div class="row">
                        <div class="col-md-6" id="colDesc">
                            <div class="info-icon"><i class="fa fa-sign-in"></i></div>
                            <h3 class="text-center">Add Project</h3>
                            <p class="text-center">Add project. Registered employees can join some projects.</p>
        
                            <a href="/users/add-project" class="btn btn-block btn-primary link_btn">Add</a>
                        </div>
        
                        <div class="col-md-6" id="colDesc">
                            <div class="info-icon"><i class="fa fa-search"></i></div>
                            <h3 class="text-center">List Project</h3>
                            <p class="text-center">Search through our project catalogue and find your best task.</p>
        
                            <a href="/users/list-project" class="btn btn-block btn-primary link_btn">View</a>
                        </div>
        
                        <div class="col-md-4" id="colDesc">
                            <div class="info-icon"><i class="fa fa-star"></i></div>
                            <h3 class="text-center">Check Project</h3>
                            <p class="text-center">Check other project and get some experience</p>
        
                            <a href="/users/list-project" class="btn btn-block btn-primary link_btn">Check</a>
                        </div>
                    </div>

                </div>
        </div>

    </div>